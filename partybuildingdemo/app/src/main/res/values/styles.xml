<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowAnimationStyle">@style/MyActivitySwitchAnimation</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerDropDownStyle</item>
    </style>

    <style name="MeidiaTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="loadingDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item><!--设置dialog的背景-->
        <item name="android:windowFrame">@null</item><!--Dialog的windowFrame框为无-->
        <item name="android:windowNoTitle">true</item><!--是否显示title-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--是否半透明-->
        <item name="android:windowContentOverlay">@null</item><!--是否半透明-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item><!-- 对话框是否有遮盖 -->
        <item name="android:backgroundDimEnabled">false</item><!--背景是否模糊显示-->
        <item name="android:backgroundDimAmount">0.6</item><!--背景的灰度-->
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/tab_select_color</item>
        <item name="colorPrimaryDark">@color/tab_select_color</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowAnimationStyle">@style/MyActivitySwitchAnimation</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="singlineText">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="MyActivitySwitchAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/right_to_left</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_none</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_none</item>
        <item name="android:activityCloseExitAnimation">@anim/left_to_right</item>
    </style>

    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="colorSpanText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="colorSpanText_10">
        <item name="android:textSize">10sp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SpinnerDropDownStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">#ffffff</item>
        <item name="android:dividerHeight">1px</item>
    </style>

    <style name="translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>
</resources>
