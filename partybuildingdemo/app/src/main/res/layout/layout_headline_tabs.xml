<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <com.longhoo.net.widget.banner.SlideBannerView
        android:id="@+id/banner_view"
        android:layout_width="match_parent"
        android:layout_height="180dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_header_gzdt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="20dp"
            android:paddingTop="15dp"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/iv_header_gzdt"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/home_header_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_header_gzdt"
                android:layout_centerHorizontal="true"
                android:paddingTop="4dp"
                android:text="工作动态"
                android:textColor="@color/tab_select_color"
                android:textSize="16sp" />
        </RelativeLayout>
        <!--<View-->
            <!--android:layout_width="1dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@color/divider"/>-->
        <RelativeLayout
            android:id="@+id/rl_header_jcfc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingTop="15dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/iv_header_jcfc"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/home_header_2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_header_jcfc"
                android:layout_centerHorizontal="true"
                android:paddingTop="4dp"
                android:text="基层党建"
                android:textColor="@color/tab_select_color"
                android:textSize="16sp" />
        </RelativeLayout>
        <!--<View-->
            <!--android:layout_width="1dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@color/divider"/>-->

        <RelativeLayout
            android:id="@+id/rl_header_dflz"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:paddingBottom="20dp"
            android:paddingTop="15dp"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/iv_header_djlz"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/home_header_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_header_djlz"
                android:layout_centerHorizontal="true"
                android:paddingTop="4dp"
                android:text="干部工作"
                android:textColor="@color/tab_select_color"
                android:textSize="16sp" />
        </RelativeLayout>
        <!--<View-->
            <!--android:layout_width="1dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@color/divider"/>-->

        <RelativeLayout
            android:id="@+id/rl_header_tzgg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="20dp"
            android:paddingTop="15dp"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/iv_header_tzgg"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/home_header_4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_header_tzgg"
                android:layout_centerHorizontal="true"
                android:paddingTop="4dp"
                android:text="时政要闻"
                android:textColor="@color/tab_select_color"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/line"
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="18dp"
            android:visibility="gone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tab_select_color"
            android:text="最新资讯"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/line"
            android:paddingTop="10dp"
            android:textSize="16sp"
            android:paddingBottom="10dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_click_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9f9f9f"
            android:text="查看更多"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:textSize="11sp"
            android:gravity="center"
            android:visibility="gone"
            android:drawableRight="@drawable/home_arrow_more"
            android:layout_marginRight="19dp"
            android:paddingBottom="2dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>