<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="2dp"
            android:background="#e71e1e"
            android:layout_height="20dp">

        </LinearLayout>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="党建工作调查问卷fvdffdgdfgdfgfdgdfdgdfgfdgfd"
            android:maxLength="15"
            android:ellipsize="end"
            style="@style/singlineText"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/tab_select_color"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:gravity="right|center"
            android:text="2017-9-22"
            android:textColor="#9f9f9f"
            android:layout_marginBottom="14sp"
            style="@style/singlineText"
            android:textSize="10sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="为进一步了解掌握党的建设工作情况，有征对性的加强和改进党的建设工作"
        android:maxLines="2"
        android:ellipsize="end"
        android:lineSpacingExtra="9dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        android:textSize="14sp"
        android:textColor="@color/tab_select_color"
        android:includeFontPadding="false"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"/>
</LinearLayout>