<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="?android:attr/selectableItemBackground"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/item_iv_thumb"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:src="@color/divider2"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"/>
        <ImageView
            android:id="@+id/iv_video_icon"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:src="@drawable/icon_video"
            android:scaleType="centerInside"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/item_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_iv_thumb"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/tab_select_color"
            android:text="坚定文化故事，讲好中国故事 专题协商会发言调整"
            android:textSize="16sp" />
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_iv_thumb"
            android:layout_toRightOf="@id/item_iv_thumb"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/item_tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="学习积分"
                android:textSize="13sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="1dp"
                style="@style/singlineText"
                android:paddingTop="6dp" />
            <TextView
                android:id="@+id/item_tv_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="回顾"
                android:layout_gravity="right"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/bg_red_stroke_25"
                android:layout_marginBottom="1dp"
                style="@style/singlineText"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp" />
        </FrameLayout>


    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/divider"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"/>
</RelativeLayout>