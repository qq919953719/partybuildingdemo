<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="?android:attr/selectableItemBackground"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/item_iv_thumb"
            android:layout_width="100dp"
            android:layout_height="123dp"
            android:src="@color/divider2"
            android:scaleType="centerCrop"
            android:layout_marginRight="13dp"/>
        <TextView
            android:id="@+id/item_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_iv_thumb"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/tab_select_color"
            android:text="坚定文化故事，讲好中国故事 专题协商会发言调整"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_iv_thumb"
            android:layout_below="@id/item_tv_title"
            android:layout_alignParentRight="true"
            android:gravity="right|bottom"
            android:layout_marginTop="6dp"
            android:text="2017-11-24"
            android:textSize="10sp"
            android:layout_marginBottom="12dp"
            android:textColor="#9f9f9f"/>
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_iv_thumb"
            android:layout_toRightOf="@id/item_iv_thumb"
            android:gravity="right|bottom"
            android:text="积分："
            android:textSize="14sp"
            android:textColor="@color/tv_content_color"
            android:layout_marginBottom="12dp"
            style="@style/singlineText"
            android:paddingTop="6dp"
            android:paddingRight="11dp"/>
        <TextView
            android:id="@+id/item_tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_iv_thumb"
            android:layout_toRightOf="@id/textView"
            android:gravity="right|bottom"
            android:text="20积分"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="12dp"
            style="@style/singlineText"
            android:paddingTop="6dp"
            android:paddingRight="11dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/divider"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"/>
</RelativeLayout>