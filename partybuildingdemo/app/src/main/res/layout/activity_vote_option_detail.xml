<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/layout_toolbar"/>
    <com.longhoo.net.widget.banner.SlideBannerView
        android:id="@+id/banner_view"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:src="@color/divider2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="活动详情"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/tab_select_color"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="12dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="15dp">
        <WebView
            android:id="@+id/web_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="活动详情活动详情活动详情活动详情活动详情活动详情活动详情活动详情"
            android:textSize="13sp"
            android:ellipsize="end"
            android:textColor="@color/tab_select_color"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:includeFontPadding="false"
            android:lineSpacingExtra="10dp"/>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总票数："
            android:textColor="@color/tv_content_color"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_vote"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/bg_red_solid_25"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:textColor="@color/white"
        android:text="为TA投票"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="15dp"/>

</LinearLayout>