<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingTop="15dp"
    android:paddingBottom="20dp">
    <ImageView
        android:id="@+id/iv_item_thumb"
        android:layout_width="100dp"
        android:layout_height="123dp"
        android:src="@color/divider2"/>
    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/singlineText"
        android:textSize="15sp"
        android:textColor="@color/tab_select_color"
        android:text="习近平谈治国理政"
        android:maxLength="8"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/tv_item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20积分"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        style="@style/singlineText"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/tv_item_exchange"
        android:layout_width="80dp"
        android:layout_height="25dp"
        style="@style/singlineText"
        android:textColor="@color/colorPrimary"
        android:text="可借"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_red_stroke_25"/>
</LinearLayout>