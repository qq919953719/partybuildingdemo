<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="?android:attr/selectableItemBackground"
            app:layout_scrollFlags="enterAlways|scroll"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <ImageView
                android:id="@+id/iv_scan"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:paddingRight="8dp"
                android:src="@drawable/home_top_scan" />

            <TextView
                android:id="@+id/tv_title"
                style="@style/singlineText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="1dp"
                android:text="龙虎网党员之家"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <FrameLayout
                android:id="@+id/me_panel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:paddingLeft="8dp">

                <ImageView
                    android:id="@+id/iv_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:src="@drawable/home_top_message" />

                <TextView
                    android:id="@+id/msg_dot"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_gravity="top|right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/msg_white_bg"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/msg_num"
                    android:textSize="7sp"
                    android:visibility="gone" />
            </FrameLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:elevation="2dp"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="4dp">

        <FrameLayout
            android:id="@+id/main_panel_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true">

            <TextView
                android:id="@+id/tv_msg_1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:background="@drawable/msg_white_bg"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_bottom_1"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/home_tab_1_1" />

                <TextView
                    android:id="@+id/tv_bottom_1"
                    style="@style/singlineText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="首页"
                    android:textColor="@color/main_bottombar_inactive"
                    android:textSize="11sp" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/main_panel_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true">

            <TextView
                android:id="@+id/tv_msg_2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:background="@drawable/msg_white_bg"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_bottom_2"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/home_tab_2_2" />

                <TextView
                    android:id="@+id/tv_bottom_2"
                    style="@style/singlineText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="管理服务"
                    android:textColor="@color/main_bottombar_inactive"
                    android:textSize="11sp" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/main_panel_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true">

            <TextView
                android:id="@+id/tv_msg_3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:background="@drawable/msg_white_bg"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_bottom_3"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/home_tab_3_2" />

                <TextView
                    android:id="@+id/tv_bottom_3"
                    style="@style/singlineText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="学习交流"
                    android:textColor="@color/main_bottombar_inactive"
                    android:textSize="11sp" />
            </LinearLayout>
        </FrameLayout>


        <FrameLayout
            android:id="@+id/main_panel_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_weight="1"
            android:clickable="true">

            <TextView
                android:id="@+id/tv_msg_5"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:background="@drawable/msg_white_bg"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_bottom_5"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/home_tab_5_2" />

                <TextView
                    android:id="@+id/tv_bottom_5"
                    style="@style/singlineText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="监督考核"
                    android:textColor="@color/main_bottombar_inactive"
                    android:textSize="11sp" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/main_panel_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true">

            <TextView
                android:id="@+id/tv_msg_4"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:background="@drawable/msg_white_bg"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_bottom_4"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/home_tab_4_2" />

                <TextView
                    android:id="@+id/tv_bottom_4"
                    style="@style/singlineText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="我的"
                    android:textColor="@color/main_bottombar_inactive"
                    android:textSize="11sp" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <com.longhoo.net.widget.NoScrollViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_container"
        android:layout_below="@id/app_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/viewpager"
        android:background="@color/divider" />
</RelativeLayout>
